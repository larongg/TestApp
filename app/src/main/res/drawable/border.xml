<!-- res/drawable/border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Background color of the layout -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your background color here -->
        </shape>
    </item>
    <item>
        <!-- Border color and thickness -->
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color for the center -->
            <stroke
                android:width="2dp"
            android:color="#FF959595" /> <!-- Set your border color here -->
        </shape>
    </item>
</layer-list>